            android:textSize="20sp" />

        <TextView
            android:id="@+id/pAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pSpecialA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pSpecialD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textSize="20sp" />

        <TextView
