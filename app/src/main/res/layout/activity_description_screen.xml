<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fondoLayout"
        android:layout_width="413dp"
        android:layout_height="298dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondo_foreground"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="77dp"
        android:layout_height="53dp"
        android:background="#00FFFFFF"
        android:translationX="5sp"
        android:translationY="10sp"
        app:srcCompat="?attr/homeAsUpIndicator"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="308dp"
            android:layout_height="294dp"
            android:layout_marginStart="4dp"
            android:accessibilityLiveRegion="assertive"
            android:backgroundTint="#DAD9D9"
            android:translationX="50dp"
            android:translationY="90dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardType1"
                android:layout_width="79dp"
                android:layout_height="26dp"
                android:backgroundTint="#C8C5C5"
                android:translationX="60dp"
                android:translationY="252dp"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/pType1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardType2"
                android:layout_width="79dp"
                android:layout_height="26dp"
                android:backgroundTint="#C8C5C5"
                android:translationX="170dp"
                android:translationY="252dp"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/pType2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/spriteImage"
                android:layout_width="213dp"
                android:layout_height="216dp"
                android:layout_gravity="center|center_horizontal"
                android:cropToPadding="true"
                android:foregroundGravity="center_vertical"
                android:translationY="-20dp"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="311dp"
            android:layout_height="316dp"
            android:layout_marginTop="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="1.0">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="359dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableRow3">

                    <TextView
                        android:id="@+id/pName"
                        android:layout_width="248dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="-"
                        android:textAllCaps="true"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/pId"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="-" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:clipToPadding="true"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/AlturaTExtView"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Altura"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/PesoTextView"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Peso" />

                    <TextView
                        android:id="@+id/ExpBaseTextView"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Exp. base" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pHeight"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:gravity="center"
                        android:text="-" />

                    <TextView
                        android:id="@+id/pWeight"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:gravity="center"
                        android:text="-" />

                    <TextView
                        android:id="@+id/pExpBase"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:gravity="center"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Habilidad" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Habilidad oculta" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="155dp"
                        android:layout_height="66dp"
                        android:background="@drawable/stylo_border"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.217"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

                        <TextView
                            android:id="@+id/pAbility1"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="-" />

                        <TextView
                            android:id="@+id/pAbility2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="-" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="154dp"
                        android:layout_height="66dp"
                        android:background="@drawable/stylo_border"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.217"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tableRow3">

                        <TextView
                            android:id="@+id/pAbility3"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="-" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Hp:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pHp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Vel:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pSpeed"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Ataq:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pAttack"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Ataq.E:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pSpecialA"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Def:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pDefense"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border_tint"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Def.E:"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pSpecialD"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stylo_border"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:clipToPadding="true"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>
    </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>