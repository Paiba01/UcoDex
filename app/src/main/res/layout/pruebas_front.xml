<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fondoLayout"
        android:layout_width="436dp"
        android:layout_height="278dp"
        android:layout_marginEnd="1dp"
        android:background="#C8C5C5"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="308dp"
            android:layout_height="294dp"
            android:accessibilityLiveRegion="assertive"
            android:background="#2AE4E4E4"
            android:backgroundTint="#8BFFFFFF"
            android:translationX="50dp"
            android:translationY="-170dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="30dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="142dp">

            <ImageView
                android:id="@+id/spriteImage"
                android:layout_width="248dp"
                android:layout_height="221dp"
                android:layout_gravity="center|center_horizontal"
                android:cropToPadding="true"
                android:foregroundGravity="center_vertical|center"
                android:translationY="-20dp"
                tools:srcCompat="@tools:sample/avatars" />

            <androidx.cardview.widget.CardView
                android:layout_width="79dp"
                android:layout_height="26dp"
                android:backgroundTint="#C8C5C5"
                android:translationX="60dp"
                android:translationY="252dp"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/pType1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="79dp"
                android:layout_height="26dp"
                android:backgroundTint="#C8C5C5"
                android:translationX="170dp"
                android:translationY="252dp"
                app:cardCornerRadius="30dp">

                <TextView
                    android:id="@+id/pType2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TableLayout
            android:layout_width="311dp"
            android:layout_height="20dp"
            android:layout_marginTop="272dp"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            tools:layout_editor_absoluteX="49dp">

            <TableRow
                android:layout_width="129dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CHARIZARD" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="50" />
            </TableRow>

        </TableLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>